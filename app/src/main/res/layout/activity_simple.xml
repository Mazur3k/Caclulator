<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.x.calculatorv2.SimpleActivity">

    <Button
        android:id="@+id/btnDot"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginLeft="8dp"
        android:text=","
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/btn9"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/negate" />

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="61dp"
        android:layout_height="49dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:text="/"
        app:layout_constraintLeft_toRightOf="@+id/btnMultiply"
        app:layout_constraintTop_toBottomOf="@+id/btn9" />

    <Button
        android:id="@+id/btnMultiply"
        android:layout_width="61dp"
        android:layout_height="49dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:text="*"
        app:layout_constraintLeft_toRightOf="@+id/btnMinus"
        app:layout_constraintTop_toBottomOf="@+id/btn8" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="61dp"
        android:layout_height="49dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:text="-"
        app:layout_constraintLeft_toRightOf="@+id/btnPlus"
        app:layout_constraintTop_toBottomOf="@+id/btn8" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="8dp"
        android:text="7"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn4" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="5"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/btn4"
        app:layout_constraintTop_toBottomOf="@+id/btn2" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="6"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/btn5"
        app:layout_constraintTop_toBottomOf="@+id/btn3" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="8"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/btn5"
        app:layout_constraintLeft_toRightOf="@+id/btn7" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="9"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/btn6"
        app:layout_constraintLeft_toRightOf="@+id/btn8" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="8dp"
        android:text="4"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn1" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="16dp"
        android:text="1"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="2"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/btn1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="3"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/btn2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="0"
        android:textSize="28sp"
        app:layout_constraintLeft_toRightOf="@+id/btn6"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="61dp"
        android:layout_height="49dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="8dp"
        android:text="+"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn7" />

    <TextView
        android:id="@+id/memory"
        android:layout_width="335dp"
        android:layout_height="57dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.804"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.981" />

    <Button
        android:id="@+id/equals"
        android:layout_width="247dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:text="="
        android:textSize="36sp"
        app:layout_constraintTop_toBottomOf="@+id/btnMinus"
        android:layout_marginLeft="34dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/remove"
        android:layout_width="77dp"
        android:layout_height="49dp"
        android:text="C"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnDot"
        app:layout_constraintLeft_toRightOf="@+id/btnDivide"
        android:layout_marginLeft="10dp" />

    <Button
        android:id="@+id/delete"
        android:layout_width="86dp"
        android:layout_height="64dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:text="Delete"
        app:layout_constraintLeft_toRightOf="@+id/equals"
        app:layout_constraintTop_toBottomOf="@+id/remove" />

    <Button
        android:id="@+id/negate"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="+/-"
        app:layout_constraintLeft_toRightOf="@+id/btn6"
        app:layout_constraintTop_toBottomOf="@+id/btn0" />

    <TextView
        android:id="@+id/result"
        android:layout_width="92dp"
        android:layout_height="73dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="353dp"
        android:fontFamily="cursive"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>

