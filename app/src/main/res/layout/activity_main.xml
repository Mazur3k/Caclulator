<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.x.calculatorv2.MainActivity">

    <Button
        android:id="@+id/exit"
        android:layout_width="221dp"
        android:layout_height="46dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="30dp"
        android:text="Exit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about" />

    <Button
        android:id="@+id/advancedButton"
        android:layout_width="221dp"
        android:layout_height="46dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="30dp"
        android:text="Advanced"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/simpleButton" />

    <Button
        android:id="@+id/simpleButton"
        android:layout_width="221dp"
        android:layout_height="46dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="192dp"
        android:text="Simple"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="281dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Please choose type of calculator"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="84dp"
        android:layout_marginLeft="52dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/about"
        android:layout_width="221dp"
        android:layout_height="46dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="30dp"
        android:text="About"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advancedButton" />

</android.support.constraint.ConstraintLayout>
